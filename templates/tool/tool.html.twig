{% extends 'base.html.twig' %}

{% block title %}
	{{ tool.name }}
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-sm-8">
			<div class="card mb-3">
				<div class="card-header">
					<span class="badge badge-dark">
						{{ tool.type }}</span>
					<small class="text-muted float-right">Annonce publié le
						{{ tool.date|date("m/d/Y") }}</small>
				</div>
				<div class="card-body">
					<h5 class="card-title">{{ tool.name }}</h5>
					<h5 class="card-title float-right">{{ tool.prices }}€/jour</h5>
					<p class="card-text">{{ tool.text|nl2br }}</p>
				</div>
			</div>
		</div>
		<div class="col-sm-4">
			<div class="card mb-3">
				<div class="card-header">
					Vendeur
				</div>
				<div class="card-body">
					<h5 class="card-title">Nom :
						{{ tool.getCreator().username }}</h5>
					<p class="card-text">Email :
						{{ tool.getCreator().email }}</p>
					<p class="card-text">Télephone :
						{{ tool.getCreator().telephone }}</p>
					<a href="#" class="btn btn-warning float-right">Contacter le vendeur</a>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-8">
			<div class="card">
				<div class="card-header">
					Image
				</div>
				<div class="card-body">
					{% if tool.picture %}
						<img src="{{ asset('uploads/pictures/' ~ tool.picture) }}" class="img-fluid">
					{% else %}
						<img src="{{ asset('images/no_image.png') }}" class="img-fluid">
					{% endif %}
				</div>
			</div>
		</div>
		<div class="col-sm-4">
			<div class="card">
				<div class="card-header">
					Lieu de la location
				</div>
				<div class="card-body">
                <p class="card-text" id="address">
						Département :</p>
                <p class="card-text" id="address">
						{{ tool.address }}</p>
                
				</div>
			</div>
		</div>
	</div>
{% endblock %}