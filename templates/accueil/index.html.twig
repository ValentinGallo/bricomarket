{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div class="mx-auto" style="width: 200px;">
		<h1 class="text-white">BricoMarket</h1>
	</div>
	<div class="input-group mb-2">
		<input type="text" class="form-control" placeholder="Taper ici votre outil">
		<select class="custom-select col-md-4">
			<option selected>Département...</option>
			<option>...</option>
		</select>
		<div class="input-group-append">
			<button class="btn btn-warning">
				<i class="fas fa-search"></i>
				Rechercher</button>
		</div>

	</div>
	<div class="card-deck">
		<div class="card" style="width: 20rem;">
			<img src="https://www.flex-tools.com/fileadmin/flex-tools.com/media/03_Startseite/jigsaw.jpg" class="card-img-top" alt="...">
			<div class="card-body">
				<h5 class="card-title">Louer un outil</h5>
				<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
				<a class="btn btn-warning" href="{{ path('list_tool') }}">Louer</a>
			</div>
		</div>

		<div class="card" style="width: 20rem;">
			<img src="https://i.pinimg.com/originals/2a/4b/4b/2a4b4bca04fc3b9034c05e2f3a76f69a.jpg" class="card-img-top" alt="...">
			<div class="card-body">
				<h5 class="card-title">Réserver un poste de travail</h5>
				<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
				<a class="btn btn-warning">Réserver</a>
			</div>
		</div>

		<div class="card" style="width: 20rem;">
			<img src="https://www.ouestfrance-auto.com/9d2d5a3/images/landing-page/lp-upsell-une.png" class="card-img-top" alt="...">
			<div class="card-body">
				<h5 class="card-title">Déposer votre annonce</h5>
				<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
				<a class="btn btn-warning" href="{{ path('create_tool') }}">Déposer</a>
			</div>
		</div>
	</div>
{% endblock %}
